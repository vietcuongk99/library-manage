
@{
    ViewData["Title"] = "Quản lý người dùng";
}

@section scripts
{
    <script src="~/js/admin/userManager.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="col-lg-12">
        <h2>Danh sách người dùng</h2>

        <div class="card">
            <div class="card-body" style="height: calc(100vh - 125px); overflow: auto;">
                <div class="table-responsive scrollable-table">
                    <table id="tbl-filechanges" class="table table-hover table-bordered dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên đăng nhập</th>
                                <th>Email</th>
                                <th>Họ tên</th>
                                <th>Tuổi</th>
                                <th>Địa chỉ</th>
                                <th>Admin</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody id="lstUserGrid"></tbody>
                    </table>
                    <span id="noUsers">Không có bản ghi nào</span>
                </div>
            </div>
        </div>
    </div>
</div>

