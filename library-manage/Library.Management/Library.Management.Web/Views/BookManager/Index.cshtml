
@{
    ViewData["Title"] = "Quản lý sách";
}

@section css{
    <link href="~/css/admin/page/bookManager.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/js/admin/bookManager.js" asp-append-version="true"></script>
}

<div id="loader" style="display:none"></div>

<div class="main-container">
    <div class="toolbar">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModalCenter">
            Nhập khẩu
        </button>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Xuất khẩu
        </button>
    </div>

    <div class="book-manager-container">
        <div class="book-image">
            <img id="blah" class="img-fluid mb-4" src="http://placehold.it/300x400" alt="Ảnh bìa sách">
        </div>
        <div>
            <input type='file' id="imgInp" />
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLongTitle">Nhập khẩu</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5>Chọn file nhập khẩu</h5>
                    <div class="custom-file input-group">
                        <input type="file" class="custom-file-input check-file-upload" id="fileNewupload" accept=".xls,.xlsx">
                        <label class="custom-file-label" for="fileNewupload">Choose file .xls or .xlsx</label>
                    </div>
                    <div class="downloadTemplateFile">
                        Tải file mẫu
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btn-import">Nhập khẩu</button>
                    <div class="spinner-border  btn-import-loading" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Xuất khẩu</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary">Xuất khẩu</button>
                </div>
            </div>
        </div>
    </div>
</div>